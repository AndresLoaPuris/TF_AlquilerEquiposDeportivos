@model SI656_Alquiler_Equipos.Models.Rental

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4><strong>Registrar Alquiler</strong></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
                @Html.EditorFor(model => model.DateCreated, new { htmlAttributes = new { @type = "date", @class = "form-control form-control-user", @placeholder = "Dia Registrado" } })
                @Html.ValidationMessageFor(model => model.DateCreated, "", new { @class = "text-danger" })
            
        </div>

        <div class="form-group">
                @Html.EditorFor(model => model.TotalPrice, new { htmlAttributes = new { @type = "number", @class = "form-control form-control-user", @placeholder = "Precio Total" } })
                @Html.ValidationMessageFor(model => model.TotalPrice, "", new { @class = "text-danger" })
          
        </div>

        <div class="form-group">
                @Html.EditorFor(model => model.OrderDate, new { htmlAttributes = new { @type = "date", @class = "form-control form-control-user", @placeholder = "Dia Orden" } })
                @Html.ValidationMessageFor(model => model.OrderDate, "", new { @class = "text-danger" })
            
        </div>

        <div class="form-group">
                @Html.DropDownList("ClientId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ClientId, "", new { @class = "text-danger" })
       
        </div>

        <div class="form-group">
                @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
            
        </div>

        <div class="form-group">
                @Html.DropDownList("RentalStateId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RentalStateId, "", new { @class = "text-danger" })
            
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registrar" class="btn btn-primary btn-user" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la Lista", "Index")
</div>
