@model IEnumerable<SI656_Alquiler_Equipos.Models.User>

@{
    ViewBag.Title = "Index";
}

    


    <div class="container-fluid">


        <p class="mb-4"></p>
        <h3><strong>Perfil</strong></h3>
        <br>
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary"></h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.NameUser)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MobileNumber)
                            </th>
                            <th>
                                @Html.DisplayName("Rol")
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.NameUser)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MobileNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rol.Name)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-success btn-user" }) |
                                    @Html.ActionLink("Detalle", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-secondary btn-user" })
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>

    </div>

