@model IEnumerable<SI656_Alquiler_Equipos.Models.Client>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">

    <p class="mb-4"></p>

    <p>
        @Html.ActionLink("Nuevo Cliente", "Create", null, new { @class = "d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" })
    </p>
    <p class="mb-4"></p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"></h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FatherLastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MotherLastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DocumentType.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DocumentNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Age)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MobileNumber)
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FatherLastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MotherLastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DocumentType.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DocumentNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MobileNumber)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
                    }

                </table>

            </div>
        </div>
    </div>

</div>

